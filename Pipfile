prod = "gunicorn -w 3 -b 0.0.0.0:5000 server.run:app --log-level warning --access-logfile - --log-file -"
dev = "flask run"
scraper = "python server/scripts/scraper.py"
seed_data = "python server/scripts/seed_data.py"

